<div>
    <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark">
        <ul class="nav nav-underline m-3">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Productos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile">Ver perfil</a>
            </li>
        </ul>
    </nav>
    <h1 class="text-center py-4">Tienda</h1>
    <h2 class="text-center">Bienvenido {{user.first_name}}</h2>
    <div class="text-muted text-center mb-5">
        Tu rol es: {{user.rol}}
    </div>
    <div class="container">
        <div class="row">
            {{#each productos}}
                <div class="col-md-4 mb-4"> 
                    <div class="card h-100"> 
                        <div class="card-body">
                            <h3><span class="small fst-italic text-black-50">Producto: </span>{{this.title}}</h3>
                            <p><span class="small fst-italic text-black-50">Descripcion: </span>{{this.description}}</p>
                            <p><span class="small fst-italic text-black-50">Precio: </span>${{this.price}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
